<!doctype html>
<html lang="en">
<head>
  <title>Prompt Me</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" >
  <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css" />
  <script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>

  <script src="https://kit.fontawesome.com/d414e5ddf1.js" crossorigin="anonymous"></script>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>

  <%= csrf_meta_tags %>
</head>

<body>

  <div class="ui grid">
    <div class="four wide column">
      <div class="ui inverted vertical labeled icon ui overlay left visible sidebar menu">

        <%- if current_user -%>
        <div class="sidebarbg">
          <form class="form-inline">

            <a class="navbar-brand" href="/">Prompt Me!</a> <img src="https://images2.imgbox.com/ab/2e/wBze4upT_o.png" class="logo"/>

            <img class="useicon" src=<%= current_user.profile_photo.url %> />
            <br />

          </div>
          <div class="links">

            <a href="/new" class="item linksfont">
              New Post
            </a>

            <a href=/profile/<%= current_user.id %> class="item linksfont">
              Profile
            </a>
            <a href="/" class="item linksfont">
              Contact Us
            </a>

            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, :class => "item linksfont" %>

          </div>
        </form>

        <%- else -%>
        <div class="sidebarbg">
          <form class="form-inline">

            <a class="navbar-brand" href="/">Prompt Me!</a>

            <img class="useicon" src='https://images2.imgbox.com/50/1c/kA6Wqtbx_o.png' />
            <br />

          </div>
          <div class="links">
            <%= link_to 'Sign Up', new_user_registration_path, :class => "item signbutton" %>
            <%= link_to 'Sign In', new_user_session_path, :class => "item signbutton" %>

            <a href="/" class="item linksfont">
              Contact Us
            </a>
          </div>

          <%- end -%>
        </div>
      </div>
      <div class="eleven wide column">

        <%- flash.each do |key, value| -%>
        <div class="flash flash-<%= key %>">
          <%= value %>
        </div>
        <%- end -%>
        <%= yield %>

        <%- if current_user -%>

        <%- end %>
        <%= javascript_include_tag 'application' %>

        <%- if Rails.env.development? || Rails.env.test? -%>
        <%= javascript_tag do %>
        window.railsEnv = '<%= Rails.env %>'
        <%- end -%>
        <%- end -%>
        <%= javascript_pack_tag 'application' %>
        <%= yield :extra_footer %>
      </div>

    </body>
    </html>
