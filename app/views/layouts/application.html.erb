<!doctype html>
<html lang="en">
<head>
  <title>Prompt Me</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" >
  <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css" />

  <script src="https://kit.fontawesome.com/d414e5ddf1.js" crossorigin="anonymous"></script>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div class="ui grid">
    <div class="four wide column">
        <div class="ui inverted vertical labeled icon ui overlay left visible sidebar menu">
          <a class="navbar-brand" href="/">Prompt Me!</a>
          <form class="form-inline">


            <%- if current_user -%>
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, :class => "btn btn-outline-secondary" %>

            <%- else -%>
            <%= link_to 'Sign Up', new_user_registration_path, :class => "btn btn-outline-secondary" %>
            <%= link_to 'Sign In', new_user_session_path, :class => "btn btn-outline-secondary" %>
            <%- end -%>
          </form>
          </div>
      </div>

      <div class="eleven wide column">


        <%- flash.each do |key, value| -%>
        <div class="flash flash-<%= key %>">
          <%= value %>
        </div>
        <%- end -%>
        <%= yield %>

        <%- if current_user -%>

        <div class="newPostButton">

          <a href="/new"><i class="fas fa-plus"></i></a>
        </div>

        <%- end %>
        <%= javascript_include_tag 'application' %>

        <%- if Rails.env.development? || Rails.env.test? -%>
        <%= javascript_tag do %>
        window.railsEnv = '<%= Rails.env %>'
        <%- end -%>
        <%- end -%>
        <%= javascript_pack_tag 'application' %>
        <%= yield :extra_footer %>
      </div>
    </div>
  </body>
  </html>
